	<select resultType="int" id="getNoticeCount">SELECT COUNT(*) FROM notice </select>

<select resultType="web.dto.Notice" parameterType="web.util.Paging" id="getNoticeList">SELECT * FROM ( SELECT rownum rnum, B.* FROM( SELECT * FROM Noticeorder by NoticeNo desc ) BORDER BY rnum ) RWHERE rnum BETWEEN #{startNo } AND #{endNo } </select>

<select resultType="web.dto.Notice" parameterType="web.dto.Notice" id="noticeView">SELECT * FROM Noticewhere noticeNo = #{noticeNo } </select>

<delete parameterType="web.dto.Notice" id="adminNoticeDelete">delete noticewhere noticeNo = #{noticeNo } </delete>


</mapper>